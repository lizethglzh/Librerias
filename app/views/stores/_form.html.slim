= form_for @store do |f|
  - if @store.errors.any?
    #error_explanation
      h2 = "#{pluralize(@store.errors.count, "error")} prohibited this store from being saved:"
      ul
        - @store.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :codename
    = f.number_field :codename
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :phone
    = f.number_field :phone
  .actions = f.submit
