<!DOCTYPE html>
<html>
  <head>
    <title>Rabbit Hole</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-light" style="background-color: #d3d3d3;">
      <a class="navbar-brand" href="#">
  </a>

      <div class="container">

        <div class="navbar-header">

          <%=link_to "Books", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
       <% if user_signed_in? %>
        <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
        <li><%= link_to "Log in", new_user_registration_path %></li>

        <% end %>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <li><%= link_to "New Book", new_book_path %></li>
        <% end %>
        <% if user_signed_in? %>
        <li><%= link_to "Stores", stores_path %></li>
        <% end %>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>

  </body>
</html>